{
    "files.exclude": {
        // 文件夹
        "**/.settings": true,
        "**/Debug": true,
        "**/Objects": true,
        "**/objects": true,
        "**/Listings": true,
        "**/listings": true,
        "**/Output": true,
        "**/output": true,
        "**/Build": true,
